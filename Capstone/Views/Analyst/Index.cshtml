@model Capstone.Models.AnalystViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search For an Illness</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowMap">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientCondition" class="control-label custom-text-light"></label>
                <input asp-for="PatientCondition" class="form-control" />
                <span asp-validation-for="PatientCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

